# AI Workbench Configuration
# Copy this file to .env and customize as needed

# Default output directory (defaults to ~/ai-workbench-output if not set)
# WORKBENCH_DEFAULT_OUTPUT_DIR=/path/to/your/output/directory

# Crawler settings
# WORKBENCH_CRAWLER_MAX_DEPTH=2
# WORKBENCH_CRAWLER_MAX_PAGES=100
# WORKBENCH_CRAWLER_TIMEOUT=10

# General settings
# WORKBENCH_VERBOSE=false

# LLM Provider API Keys
# WORKBENCH_MISTRAL_API_KEY=...
# WORKBENCH_OLLAMA_BASE_URL=http://localhost:11434

# Default LLM Settings
# WORKBENCH_DEFAULT_LLM_PROVIDER=mistral
# WORKBENCH_DEFAULT_LLM_MODEL=mistral-large-latest

# Embedding Settings
# WORKBENCH_DEFAULT_EMBEDDING_MODEL=mistral-embed
# WORKBENCH_CHUNK_SIZE=500
# WORKBENCH_CHUNK_OVERLAP=50

# Vector Store Settings
# WORKBENCH_VECTOR_STORE_PATH=~/.ai-workbench/vector-stores

# RAG Settings
# WORKBENCH_RAG_TOP_K=5
# WORKBENCH_RAG_SCORE_THRESHOLD=0.7
# WORKBENCH_RAG_CONTEXT_MAX_TOKENS=4000

# MCP Settings
# WORKBENCH_MCP_SERVER_PORT=8080

# Chatbot Settings
# WORKBENCH_CHAT_HISTORY_LIMIT=50
# WORKBENCH_CHAT_TEMPERATURE=0.7
# WORKBENCH_CHAT_MAX_TOKENS=4000
